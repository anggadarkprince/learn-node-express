<%- include('../components/header') %>

<h1>My Orders</h1>

<% if(orders.length > 0) { %>
    <ul>
        <% orders.forEach(order => { %>
            <li>
                <h4>Order # <%= order.id %></h4>
                <ul>
                    <% order.products.forEach(item => { %>
                        <li><%= item.product.title %> (<%= item.quantity %>)</li>
                    <% }) %>
                </ul>
            </li>
        <% }) %>
    </ul>
<% } else { %>
    <p>No order available</p>
<% } %>

