<%- include('../components/header') %>

<form class="login-form" action="/signup" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <h3>Register</h3>
    <%- include('../components/alert') %>
    <div class="form-control">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" placeholder="Your full name" maxlength="50">
    </div>
    <div class="form-control">
        <label for="email">E-Mail</label>
        <input type="email" name="email" id="email" placeholder="Email address" maxlength="50">
    </div>
    <div class="form-control">
        <label for="password">Password</label>
        <input type="password" name="password" id="password" placeholder="Pick a password" maxlength="50">
    </div>
    <div class="form-control">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Repeat your password" maxlength="50">
    </div>
    <button class="btn" type="submit">Sign Up</button>
</form>

<%- include('../components/footer') %>