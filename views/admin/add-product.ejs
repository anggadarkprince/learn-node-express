<%- include('../components/header') %>

    <form action="/admin/products" method="post" class="product-form">
        <div class="form-control">
            <label for="title">Product Title</label>
            <input type="text" id="title" name="title" placeholder="Product title">
        </div>
        <div class="form-control">
            <label for="image">Image URL</label>
            <input type="url" id="image" name="image" placeholder="Product image">
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input type="number" id="price" name="price" placeholder="Product price">
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <textarea id="description" name="description" placeholder="Product description"></textarea>
        </div>
        <button type="submit">Add Product</button>
    </form>

<%- include('../components/footer') %>