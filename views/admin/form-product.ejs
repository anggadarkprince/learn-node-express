<%- include('../components/header') %>
    <form action="/admin/<%= editing ? 'product/edit/' + product.id : 'products' %>" method="post" class="product-form">
        <h3><%= editing ? 'Edit' : 'Create' %> Product</h3>
        <div class="form-control">
            <label for="title">Product Title</label>
            <input type="text" id="title" name="title" placeholder="Product title" value="<%= product.title %>">
        </div>
        <div class="form-control">
            <label for="image">Image URL</label>
            <input type="url" id="image" name="image" placeholder="Product image" value="<%= product.imageUrl %>">
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input type="number" id="price" name="price" placeholder="Product price" value="<%= product.price %>">
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <textarea id="description" name="description" placeholder="Product description"><%= product.description %></textarea>
        </div>
        <button type="submit"><%= editing ? 'Update' : 'Add' %> Product</button>
    </form>

<%- include('../components/footer') %>