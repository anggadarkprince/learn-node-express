<% if(typeof errorMessage != "undefined" && errorMessage.length) { %>
    <div class="alert alert--error">
        <% if(typeof errorMessage == 'object') { %>
            <% let lastErrorField = '' %>
            <% for (let error of errorMessage) { %>
                <% if(lastErrorField != error.param) { %>
                    <p><%= error.hasOwnProperty('msg') ? error.msg : error %></p>
                <% } %>
                <% lastErrorField = error.param %>
            <% } %>
        <% } else { %>
            <%= errorMessage %>
        <% } %>
    </div>
<% } else if(typeof successMessage != "undefined" && successMessage.length) { %>
    <div class="alert alert--success"><%= successMessage %></div>
<% } %>